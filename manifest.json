{
    "name": "Task Alert",
    "description": "It is used for making notes/tasks with an alarm",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_title": "Task Alarm",
        "default_popup": "public/dist/index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "notification16.png",
        "32": "notification32.png",
        "128": "notification128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}